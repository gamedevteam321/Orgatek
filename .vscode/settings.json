{
  // Turn off VS Code's CSS/SCSS/LESS at‑rule validation
  "css.lint.unknownAtRules": "ignore",
  "scss.lint.unknownAtRules": "ignore",
  "less.lint.unknownAtRules": "ignore",

  // (Recommended) Disable built‑in CSS validation altogether
  "css.validate": false,

  // Point the Tailwind extension at your config file
  "tailwindCSS.experimental.configFile": "tailwind.config.ts",

  // Ensure Tailwind IntelliSense kicks in for your CSS/PostCSS files
  "tailwindCSS.includeLanguages": {
    "css": "css",
    "postcss": "css"
  }
} 